<% default ||= "" %>

<div class="field">
	<label for='<%= name %>'><%= label %> <% if required %><span>- required</span><% end %></label>
	<% if defined? info %><div class='info'><%= info.html_safe %></div><% end %>
	<% if @errors.key?(name)  %><div class='error'><%= @errors[name] %></div><% end %>
  <input type='text' name='<%= name %>' value='<%= params[name] || Settings.get(name, default) %>' placeholder='<%= placeholder if defined? placeholder %>' class="<%= 'error'  if @errors.key? name %>">
</div>