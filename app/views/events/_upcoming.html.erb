<% 
	events = admin? ? Event : Event.published
	@events = events.coming_up.by_date.limit(Settings.get("event:show_upcoming_events")) %>

<% if @events.count > 0 %>
	<header>Upcoming <%= Settings.get("events:title") %></header>
	<%= render :partial => @events, :locals => {:show_nav => true, :highlight_unpublished => true, :small => true} %>
<% end %>
