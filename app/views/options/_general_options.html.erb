<%= render :partial => 'input', :locals => {:name => 'title', :label => 'Site title', :required => true, :placeholder => 'e.g. My cool site'}%>
<%= render :partial => 'input', :locals => {:name => 'header_image', :label => 'Header image', :required => true, :default => 'bloody_cms.png', :info => 'Make sure to upload your own asset.'}%>
<%= render :partial => 'select', :locals => {:name => 'root_url', :label => 'What page  would you like to see on the frontpage?', :options => Page.published.collect {|page| ["pages##{page.slug}", page.title]}, :required => false } %>
