<% 
	posts = admin? ? Post : Post.published
	@posts = posts.descending_date.limit(Settings.get("blog:show_recent_posts")) %>

<% if @posts.count > 0 %>
	<header><%= Settings.get("blog:title") %></header>
	<%= render :partial => @posts, :locals => {:show_nav => true, :highlight_unpublished => true} %>
<% end %>
